<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Full Name -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Career -->
        <EditText
            android:id="@+id/careerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Career"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Organization -->
        <EditText
            android:id="@+id/organizationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Organization"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:minHeight="48dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <!-- Website -->
        <EditText
            android:id="@+id/websiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Website"
            android:inputType="textUri"
            android:minHeight="48dp" />

        <!-- Country (AutoComplete) -->
        <AutoCompleteTextView
            android:id="@+id/countryAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:completionThreshold="1"
            android:hint="Country"
            android:minHeight="48dp" />

        <!-- City (AutoComplete) -->
        <AutoCompleteTextView
            android:id="@+id/cityAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:completionThreshold="1"
            android:hint="City"
            android:minHeight="48dp" />

        <!-- Facebook -->
        <EditText
            android:id="@+id/facebookEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Facebook Profile"
            android:inputType="textUri"
            android:minHeight="48dp" />

        <!-- LinkedIn -->
        <EditText
            android:id="@+id/linkedinEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="LinkedIn Profile"
            android:inputType="textUri"
            android:minHeight="48dp" />

        <!-- Twitter -->
        <EditText
            android:id="@+id/twitterEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Twitter Profile"
            android:inputType="textUri"
            android:minHeight="48dp" />

        <!-- Instagram -->
        <EditText
            android:id="@+id/instagramEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Instagram Profile"
            android:inputType="textUri"
            android:minHeight="48dp" />

        <!-- WhatsApp -->
        <EditText
            android:id="@+id/whatsappEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="WhatsApp Number"
            android:inputType="phone"
            android:minHeight="48dp" />

        <!-- Telegram -->
        <EditText
            android:id="@+id/telegramEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telegram Username"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Skype -->
        <EditText
            android:id="@+id/skypeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skype ID"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- WeChat -->
        <EditText
            android:id="@+id/weChatEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WeChat ID"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Line -->
        <EditText
            android:id="@+id/lineEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Line ID"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
